<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="8dp"
    tools:context=".ui.account.info.ShopInfoFragment">
    <include
        android:id="@+id/topAppBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/layout_top_bar" />
    <TextView
        android:id="@+id/tvShopInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:padding="12dp"
        android:text="@string/account_shop_info_label"
        android:textAppearance="@style/TextAppearance.MyTheme.Body1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivShop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="18dp"
        android:background="@drawable/round_outline_rect"
        android:contentDescription="@string/add_img_item_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvShopInfo"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvFromWhen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:padding="10dp"
        android:text="@string/account_from_when_label"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray"
        android:textAppearance="@style/TextAppearance.MyTheme.Body1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_baseline_calendar_month_24"
        app:layout_constraintEnd_toStartOf="@id/guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivShop" />
    <TextView
        android:id="@+id/tvFromWhenContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="#222121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide"
        app:layout_constraintTop_toTopOf="@+id/tvFromWhen"
        app:layout_constraintBottom_toBottomOf="@id/tvFromWhen"
        tools:text="Milk and Milk Products" />
    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:padding="10dp"
        android:text="@string/account_phone_number_label"
        android:textColor="@color/gray"
        android:textAppearance="@style/TextAppearance.MyTheme.Body1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_baseline_phone_24"
        app:layout_constraintEnd_toStartOf="@id/guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFromWhen" />
    <TextView
        android:id="@+id/tvPhoneNumberContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="#222121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide"
        app:layout_constraintTop_toTopOf="@+id/tvPhoneNumber"
        app:layout_constraintBottom_toBottomOf="@id/tvPhoneNumber"
        tools:text="Milk and Milk Products" />
    <TextView
        android:id="@+id/tvNumberOfProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:textColor="@color/gray"
        android:includeFontPadding="false"
        android:padding="10dp"
        android:text="@string/account_num_of_product_label"
        android:textAppearance="@style/TextAppearance.MyTheme.Body1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/stock"
        app:layout_constraintEnd_toStartOf="@id/guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber" />

    <TextView
        android:id="@+id/tvNumberOfProductContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="#222121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide"
        app:layout_constraintTop_toTopOf="@+id/tvNumberOfProduct"
        app:layout_constraintBottom_toBottomOf="@id/tvNumberOfProduct"
        tools:text="10" />
    <TextView
        android:id="@+id/tvReview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:textColor="@color/dark_gray"
        android:includeFontPadding="false"
        android:padding="16dp"
        android:text="@string/account_review_label"
        android:textAppearance="@style/TextAppearance.MyTheme.Body1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_baseline_star_half_24"
        app:layout_constraintEnd_toStartOf="@id/guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNumberOfProduct" />
    <TextView
        android:id="@+id/tvReviewContent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#222121"
        app:layout_constraintStart_toStartOf="@id/guide"
        app:layout_constraintTop_toTopOf="@+id/tvReview"
        app:layout_constraintBottom_toBottomOf="@id/tvReview"
        android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
        tools:text="10 reviews" />
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textColor="@color/gray"
        android:padding="10dp"
        android:text="@string/account_description_label"
        android:textAppearance="@style/TextAppearance.MyTheme.Body1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/shop"
        app:layout_constraintEnd_toStartOf="@id/guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReview" />
    <TextView
        android:id="@+id/tvDescriptionContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:textColor="#222121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        tools:text="Milk and Milk Products a b sd sad d das d ad das d dasa dasa das" />
    <include
        android:id="@+id/loader_layout"
        layout="@layout/layout_circular_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>